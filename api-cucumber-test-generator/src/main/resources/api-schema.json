{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/object1615244359.json",
  "title": "Root",
  "type": "object",
  "required": [
    "description",
    "environments",
    "scenarios"
  ],
  "properties": {
    "description": {
      "$id": "#root/description",
      "title": "Description",
      "type": "string",
      "default": "",
      "examples": [
        "Conversion API"
      ],
      "pattern": "^.*$"
    },
    "environments": {
      "$id": "#root/environments",
      "title": "Environments",
      "type": "array",
      "default": [],
      "items":{
        "$id": "#root/environments/items",
        "title": "Items",
        "type": "object",
        "required": [
          "name",
          "protocol",
          "host",
          "port"
        ],
        "properties": {
          "name": {
            "$id": "#root/environments/items/name",
            "title": "Name",
            "type": "string",
            "default": "",
            "examples": [
              "dev"
            ],
            "pattern": "^.*$"
          },
          "protocol": {
            "$id": "#root/environments/items/protocol",
            "title": "Protocol",
            "type": "string",
            "default": "",
            "examples": [
              "http"
            ],
            "pattern": "^.*$"
          },
          "host": {
            "$id": "#root/environments/items/host",
            "title": "Host",
            "type": "string",
            "default": "",
            "examples": [
              "data.fixer.io"
            ],
            "pattern": "^.*$"
          },
          "port": {
            "$id": "#root/environments/items/port",
            "title": "Port",
            "type": "integer",
            "examples": [
              80
            ],
            "default": 0
          }
        }
      }

    },
    "scenarios": {
      "$id": "#root/scenarios",
      "title": "Scenarios",
      "type": "array",
      "default": [],
      "items":{
        "$id": "#root/scenarios/items",
        "title": "Items",
        "type": "object",
        "required": [
          "scenarioNumber",
          "groupName",
          "requestMethod",
          "contextPath",
          "description",
          "consumes",
          "produces",
          "queryParams",
          "hasRequestBody",
          "hasResponseBody",
          "responseStatus"
        ],
        "properties": {
          "scenarioNumber": {
            "$id": "#root/scenarios/items/scenarioNumber",
            "title": "Scenarionumber",
            "type": "integer",
            "examples": [
              1
            ],
            "default": 0
          },
          "groupName": {
            "$id": "#root/scenarios/items/groupName",
            "title": "Groupname",
            "type": "string",
            "default": "",
            "examples": [
              "application"
            ],
            "pattern": "^.*$"
          },
          "requestMethod": {
            "$id": "#root/scenarios/items/requestMethod",
            "title": "Requestmethod",
            "type": "string",
            "default": "",
            "examples": [
              "GET"
            ],
            "pattern": "^.*$"
          },
          "contextPath": {
            "$id": "#root/scenarios/items/contextPath",
            "title": "Contextpath",
            "type": "string",
            "default": "",
            "examples": [
              "/api/convert"
            ],
            "pattern": "^.*$"
          },
          "description": {
            "$id": "#root/scenarios/items/description",
            "title": "Description",
            "type": "string",
            "default": "",
            "examples": [
              "testing adding customer"
            ],
            "pattern": "^.*$"
          },
          "consumes": {
            "$id": "#root/scenarios/items/consumes",
            "title": "Consumes",
            "type": "string",
            "default": "",
            "examples": [
              "application/json"
            ],
            "pattern": "^.*$"
          },
          "produces": {
            "$id": "#root/scenarios/items/produces",
            "title": "Produces",
            "type": "string",
            "default": "",
            "examples": [
              "application/json"
            ],
            "pattern": "^.*$"
          },
          "queryParams": {
            "$id": "#root/scenarios/items/queryParams",
            "title": "Queryparams",
            "type": "object",
            "required": [
              "access_key",
              "from",
              "to",
              "amount"
            ],
            "properties": {
              "access_key": {
                "$id": "#root/scenarios/items/queryParams/access_key",
                "title": "Access_key",
                "type": "string",
                "default": "",
                "examples": [
                  "41d82645b6833cbcb1e30ab643ccc855"
                ],
                "pattern": "^.*$"
              },
              "from": {
                "$id": "#root/scenarios/items/queryParams/from",
                "title": "From",
                "type": "string",
                "default": "",
                "examples": [
                  "GBP"
                ],
                "pattern": "^.*$"
              },
              "to": {
                "$id": "#root/scenarios/items/queryParams/to",
                "title": "To",
                "type": "string",
                "default": "",
                "examples": [
                  "USD"
                ],
                "pattern": "^.*$"
              },
              "amount": {
                "$id": "#root/scenarios/items/queryParams/amount",
                "title": "Amount",
                "type": "string",
                "default": "",
                "examples": [
                  "1"
                ],
                "pattern": "^.*$"
              }
            }
          }
        ,
          "hasRequestBody": {
            "$id": "#root/scenarios/items/hasRequestBody",
            "title": "Hasrequestbody",
            "type": "string",
            "default": "",
            "examples": [
              "true"
            ],
            "pattern": "^.*$"
          },
          "hasResponseBody": {
            "$id": "#root/scenarios/items/hasResponseBody",
            "title": "Hasresponsebody",
            "type": "string",
            "default": "",
            "examples": [
              "true"
            ],
            "pattern": "^.*$"
          },
          "responseStatus": {
            "$id": "#root/scenarios/items/responseStatus",
            "title": "Responsestatus",
            "type": "integer",
            "examples": [
              200
            ],
            "default": 0
          }
        }
      }

    }
  }
}
